<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import org.controlsfx.glyphfont.*?>

<BorderPane stylesheets="/fxml/styles.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.in.rrrekin.ittoolbox.gui.NodeEditor">
   <center>
      <SplitPane fx:id="splitPane" dividerPositions="0.5, 0.5" orientation="VERTICAL">
         <items>
            <BorderPane fx:id="descriptionPane">
               <top>
                <Label text="%NODE_LABEL_DESCRIPTION" BorderPane.alignment="CENTER_LEFT" />
               </top>
               <center>
                <TextArea fx:id="description" minHeight="20.0" prefHeight="150.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
            <BorderPane fx:id="servicePane">
               <bottom>
                <HBox alignment="BASELINE_RIGHT" BorderPane.alignment="CENTER">
                  <Button fx:id="editServiceButton" onAction="#onEditService" styleClass="mini_button">
                    <graphic>
                      <Glyph fontFamily="FontAwesome" fontSize="16" icon="EDIT" />
                    </graphic>
                    <tooltip>
                      <Tooltip text="%NODE_EDIT_SERVICE" />
                    </tooltip>
                  </Button>
                  <Button onAction="#onAddService" styleClass="mini_button">
                    <graphic>
                      <Glyph fontFamily="FontAwesome" fontSize="16" icon="PLUS" />
                    </graphic>
                    <tooltip>
                      <Tooltip text="%NODE_ADD_SERVICE" />
                    </tooltip>
                  </Button>
                  <Button fx:id="removeServiceButton" onAction="#onRemoveService" styleClass="mini_button">
                    <graphic>
                      <Glyph fontFamily="FontAwesome" fontSize="16" icon="TRASH" />
                    </graphic>
                    <tooltip>
                      <Tooltip text="%NODE_DELETE_SERVICE" />
                    </tooltip>
                  </Button>
                </HBox>
               </bottom>
               <center>
                <ListView fx:id="services" minHeight="50.0" onMouseClicked="#onServiceClicked" prefHeight="120.0" BorderPane.alignment="CENTER" />
               </center>
               <top>
                <Label text="%NODE_LABEL_SERVICES" BorderPane.alignment="CENTER_LEFT" />
               </top>
            </BorderPane>
            <BorderPane fx:id="propertiesPane">
               <center>
                <ListView fx:id="properties" minHeight="50.0" prefHeight="120.0" />
               </center>
               <top>
                <Label text="%NODE_LABEL_PROPERTIES" BorderPane.alignment="CENTER_LEFT" />
               </top>
               <bottom>
                <HBox alignment="BASELINE_RIGHT" BorderPane.alignment="CENTER">
                  <Button fx:id="editPropertyButton" onAction="#onEditProperty" styleClass="mini_button">
                    <graphic>
                      <Glyph fontFamily="FontAwesome" fontSize="16" icon="EDIT" />
                    </graphic>
                  </Button>
                  <Button onAction="#onAddProperty" styleClass="mini_button">
                    <graphic>
                      <Glyph fontFamily="FontAwesome" fontSize="16" icon="PLUS" />
                    </graphic>
                  </Button>
                  <Button fx:id="removePropertyButton" onAction="#onRemoveProperty" styleClass="mini_button">
                    <graphic>
                      <Glyph fontFamily="FontAwesome" fontSize="16" icon="TRASH" />
                    </graphic>
                  </Button>
                </HBox>
               </bottom>
            </BorderPane>
         </items>
      </SplitPane>
   </center>
   <bottom>
    <ButtonBar BorderPane.alignment="CENTER">
      <buttons>
        <Button onAction="#onFormReset" text="%RESET_BUTTON" ButtonBar.buttonData="LEFT" />
        <Button defaultButton="true" onAction="#onFormOk" text="%OK_BUTTON" ButtonBar.buttonData="OK_DONE" />
        <Button cancelButton="true" onAction="#onFormCancel" text="%CANCEL_BUTTON" ButtonBar.buttonData="CANCEL_CLOSE" />
        <Button onAction="#onFormApply" text="%APPLY_BUTTON" ButtonBar.buttonData="APPLY" />
      </buttons>
      <padding>
        <Insets bottom="3.0" right="3.0" top="3.0" />
      </padding>
    </ButtonBar>
   </bottom>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <GridPane fx:id="scene" stylesheets="/fxml/styles.css">
              <children>
                <Label contentDisplay="RIGHT" text="%NODE_LABEL_NAME" />
                <TextField fx:id="name" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
                <Label fx:id="addressLabel" contentDisplay="RIGHT" text="%NODE_LABEL_ADDRESS" GridPane.rowIndex="1" />
                <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    </children>
              <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
              </padding>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
         </center>
         <left>
          <Pane fx:id="iconPane" maxHeight="72.0" maxWidth="72.0" minHeight="72.0" minWidth="72.0" BorderPane.alignment="CENTER">
            <padding>
              <Insets left="3.0" top="3.0" />
            </padding>
          </Pane>
         </left>
         <bottom>
          <HBox id="iconControlsPane" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
               <Label text="%NODE_ICON_EDIT_LABEL" />
            <SearchableComboBox fx:id="iconSelector" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onIconChange" promptText="%NODE_SELECT_ICON" HBox.hgrow="NEVER" />
            <ColorPicker fx:id="iconColor" onAction="#onIconChange" promptText="%NODE_SELECT_ICON_COLOR" HBox.hgrow="NEVER" />
            <CheckBox fx:id="useIconGradient" onAction="#onIconChange" text="%NODE_ICON_GRADIENT" HBox.hgrow="NEVER" />
          </HBox>
         </bottom>
      </BorderPane>
   </top>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</BorderPane>
